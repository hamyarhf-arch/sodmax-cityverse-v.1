{
  "name": "sodmax-cityverse-mobile",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "lint": "eslint .",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace SODmAX.xcworkspace -scheme SODmAX -configuration Release",
    "build:apk": "cd android && ./gradlew assembleRelease",
    "build:aab": "cd android && ./gradlew bundleRelease",
    "clean": "cd android && ./gradlew clean && cd ../ios && xcodebuild clean",
    "clean:all": "watchman watch-del-all && rm -rf node_modules && npm install && cd ios && pod install && cd ..",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.3",
    "@react-native-community/blur": "^4.3.0",
    "@react-native-community/checkbox": "^0.5.15",
    "@react-native-community/netinfo": "^9.4.1",
    "@react-native-community/push-notification-ios": "^1.11.0",
    "@react-navigation/bottom-tabs": "^6.5.8",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.17",
    "axios": "^1.6.2",
    "lottie-react-native": "^5.1.6",
    "react": "18.2.0",
    "react-native": "0.72.7",
    "react-native-animatable": "^1.3.3",
    "react-native-bootsplash": "^6.1.0",
    "react-native-config": "^1.5.1",
    "react-native-device-info": "^10.11.0",
    "react-native-gesture-handler": "^2.12.1",
    "react-native-get-random-values": "^1.9.0",
    "react-native-haptic-feedback": "^2.3.4",
    "react-native-linear-gradient": "^2.8.3",
    "react-native-reanimated": "^3.5.4",
    "react-native-safe-area-context": "^4.7.2",
    "react-native-screens": "^3.25.0",
    "react-native-share": "^9.6.0",
    "react-native-svg": "^13.14.0",
    "react-native-toast-message": "^2.1.6",
    "react-native-vector-icons": "^10.0.0",
    "react-native-vibrate": "^1.0.1",
    "react-native-webview": "^13.5.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "@babel/runtime": "^7.23.5",
    "@react-native-community/eslint-config": "^3.2.0",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.3",
    "@types/react": "^18.2.45",
    "@types/react-native": "^0.72.8",
    "@types/react-native-vector-icons": "^6.4.18",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.76.8",
    "prettier": "^3.1.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "jest": {
    "preset": "react-native"
  }
}
