# تنظیمات محیطی اپلیکیشن موبایل SODmAX

# API Configuration
API_URL=https://api.sodmax.city
WS_URL=wss://api.sodmax.city

# App Configuration
APP_NAME=SODmAX CityVerse
APP_VERSION=2.0.0
APP_ENV=development

# Authentication
AUTH_TOKEN_KEY=sodmax_auth_token
REFRESH_TOKEN_KEY=sodmax_refresh_token
TOKEN_EXPIRY=7d

# Mining Configuration
BASE_MINING_RATE=5
AUTO_MINING_INTERVAL=5000
BOOST_DURATION=30000

# Wallet Configuration
MIN_WITHDRAWAL=10000
MAX_WITHDRAWAL=5000000
WITHDRAWAL_FEE_PERCENT=2.5

# Referral Configuration
REFERRAL_BONUS=1000
REFERRAL_SOD_BONUS=500
MAX_REFERRALS_PER_DAY=50

# Conversion Rates
SOD_TO_TOMAN_RATE=0.01
TOMAN_TO_USDT_RATE=300000
USDT_TO_BUSD_RATE=1

# Security
ENABLE_BIOMETRIC=true
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5

# Notification
FCM_SENDER_ID=1234567890
ONESIGNAL_APP_ID=your-onesignal-app-id

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=your-sentry-dsn

# App Store
ANDROID_PACKAGE_NAME=com.sodmax.cityverse
IOS_BUNDLE_ID=com.sodmax.cityverse

# Support
SUPPORT_PHONE=+982100000000
SUPPORT_EMAIL=mobile-support@sodmax.city
SUPPORT_TELEGRAM=@sodmax_mobile_support

# Social
INSTAGRAM_URL=https://instagram.com/sodmax_cityverse
TELEGRAM_URL=https://t.me/sodmax_channel
YOUTUBE_URL=https://youtube.com/@sodmax

# Legal
TERMS_URL=https://sodmax.city/terms/mobile
PRIVACY_URL=https://sodmax.city/privacy/mobile

# Testing
ENABLE_MOCK_API=false
TEST_USER_PHONE=09123456789
TEST_USER_PASSWORD=123456

# Development
ENABLE_LOGGING=true
LOG_LEVEL=debug
ENABLE_REDUX_DEBUGGER=false

# Feature Flags
ENABLE_DARK_MODE=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_IN_APP_PURCHASES=true
ENABLE_CRYPTO_WALLET=true

# Performance
IMAGE_CACHE_SIZE=100
API_CACHE_TTL=300000
ANIMATION_DURATION=300

# Internationalization
DEFAULT_LOCALE=fa
SUPPORTED_LOCALES=fa,en,ar,tr
DEFAULT_CURRENCY=تومان
DEFAULT_TIMEZONE=Asia/Tehran

# Payment Gateways
ZARINPAL_MERCHANT_ID=00000000-0000-0000-0000-000000000000
IDPAY_API_KEY=your-idpay-api-key
CRYPTO_API_KEY=your-crypto-api-key

# In-App Purchases (iOS)
IOS_SHARED_SECRET=your-ios-shared-secret

# In-App Purchases (Android)
ANDROID_LICENSE_KEY=your-android-license-key

# ==================== توضیحات ====================
# 1. API_URL: آدرس API سرور
# 2. APP_ENV: محیط اجرا (development, production, staging)
# 3. ENABLE_BIOMETRIC: فعال کردن ورود بیومتریک
# 4. FCM_SENDER_ID: شناسه Firebase Cloud Messaging
# 5. ANDROID_PACKAGE_NAME: نام پکیج اندروید
# 6. IOS_BUNDLE_ID: شناسه باندل iOS
# 7. ENABLE_MOCK_API: استفاده از API ساختگی برای تست
# 8. FEATURE_FLAGS: فعال/غیرفعال کردن قابلیت‌ها
